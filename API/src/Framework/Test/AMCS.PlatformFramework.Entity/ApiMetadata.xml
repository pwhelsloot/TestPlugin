    <Entity Name="User" Type="UserEntity"/>
    <Entity Name="Job" Type="JobEntity"/>
    <Entity Name="CustomerSite" Type="CustomerSiteEntity"/>
    <Entity Name="Location" Type="LocationEntity"/>
  </Context>

